<div style="overflow-x: scroll;">
	<table class="admin-table">
		<thead>
			<tr>
				<th>id</th>
				<th>login</th>
				<th>email</th>
				<th>role</th>
				<th>campus</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			<% users.each do |user| %>
				<tr>
					<td><%= user.id %></td>
					<td><%= link_to user.login, edit_user_path(user) %></td>
					<td><%= user.email %></td>
					<td><%= user.role %></td>
					<td><%= user.campus.nil? ? "-" : user.campus.name %></td>
					<td>
						<%= link_to 'Edit', edit_user_path(user) %>
						<%= link_to 'Delete', user_path(user), data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this user?"} %>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>