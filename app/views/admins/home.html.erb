<div class="container">
	<div class="container-head">
		<span class="breadcrumb"><%= link_to 'ROOMS', home_path %> /</span>
		<div class="content">
			<h1 class="title">Rooms</h1>
			<div class="buttons"><div class="add-button"><%= link_to 'New Room', new_room_path %></div></div>
		</div>
	</div>
	<div class="table-container">
		<table>
			<tr class="table-head"><th>ROOMS LIST</th><th>CAMPUS</th><th>ADDRESS</th><th>LANGUAGE</th><th>#ROOMS</th><th>#USERS</th></tr>
			<% @campuses.each do |campus| %>
				<% if campus.rooms.any? %>
					<tr>
						<td class="list">
							<% campus.rooms.each do |room| %>
								<div class="card-element">
									<%= link_to edit_room_path(room) do %><%= room.name %><% end %>
									<div class="room-buttons">
										<%= link_to edit_room_path(room) do %>EDIT<% end %>
										<%= link_to room_path(room), data: {turbo_method: :delete, turbo_confirm: "Do you want to delete this room?"} do %>DELETE<% end %>
									</div>
								</div>
							<% end %>
						</td>
						<td><%= campus.name %></td>
						<td><%= campus.address %></td>
						<td><%= campus.language %></td>
						<td>(<%= campus.rooms.count %>)</td>
						<td>(<%= campus.users.count %>)</td>
					</tr>
				<% end %>
			<% end %>
		</table>
	</div>
</div>