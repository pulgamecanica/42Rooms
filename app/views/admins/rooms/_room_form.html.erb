<div class="form-group">
  <%= form_with model: [@room] do |form| %>   
  <div class="p0">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  <div class="p3">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>
  <div class="p3">
    <%= form.label :capacity %>
    <%= form.number_field :capacity  %>
  </div>
  <div class="p1">
    <%= form.label :room_type %>
    <% if @room.persisted? %>
      <%= form.select :room_type, options_for_select(Room.room_types.map {|name, id| [name.capitalize, name]}, selected: @room.room_type) %>
    <% else %>
      <%= form.select :room_type, options_for_select(Room.room_types.map {|name, id| [name.capitalize, name]}) %>
    <% end %>
  </div>
  <div class="p1">
    <%= form.label :status %>
    <% if @room.persisted? %>
      <%= form.select :status, options_for_select(Room.statuses.map {|name, id| [name.capitalize, name]}, selected: @room.status) %>
    <% else %>
      <%= form.select :status, options_for_select(Room.statuses.map {|name, id| [name.capitalize, name]}) %>
    <% end %>
  </div>
	<%= form.submit class: "submit-button btn btn-blue" %>
  <% end %>
</div>