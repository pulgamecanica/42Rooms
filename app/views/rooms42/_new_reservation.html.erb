<div class="form-group">
  <%= form_with model: @new_reservation do |form| %> 

  <div class="field">
    <%= form.label :starts_at %>
    <%= form.datetime_select :starts_at %>
  </div>

  <div class="field">
    <%= form.label :ends_at %>
    <%= form.datetime_select :ends_at %>
  </div>

  <div class="field">
    <%= form.label :subject %>
    <%= form.text_field :subject %>
  </div>
  
	<%= form.submit class: "btn btn-primary btn-block mt-3" %>
  <% end %>
</div>